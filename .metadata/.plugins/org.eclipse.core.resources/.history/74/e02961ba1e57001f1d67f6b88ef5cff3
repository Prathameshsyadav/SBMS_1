package in.ashokit.service;

import java.util.List;
import java.util.Optional;

import org.springframework.stereotype.Service;

import in.ashokit.entity.Student;
import in.ashokit.repo.StuRepo;

@Service
public class StuService {
	
	private StuRepo stuRepo;

	public StuService(StuRepo stuRepo) {
		this.stuRepo = stuRepo;
	}
	
	public void getAllStudents() {
		Iterable<Student> all = stuRepo.findAll();
		all.forEach(System.out::println);
	}
	
	public void getStudentById(Integer id) {
		Student student = stuRepo.findById(id).get();
		System.out.println(student);
		
	}
	
	public void getStudentByCity(Integer id) {
		List<Student> address = stuRepo.findByAddress(id);
		System.out.println(address);
	}
	
	

}
